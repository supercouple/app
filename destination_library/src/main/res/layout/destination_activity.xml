<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DCDCDC">

    <com.zhongyou.destination_library.Views.ObservableScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:id="@+id/scrollview">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg"/>
            <LinearLayout
                    android:id="@+id/relativeId_a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner">
                <LinearLayout
                        android:id="@+id/text_id1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:gravity="bottom"
                            android:text="| XXXXX" />
                    <TextView
                            android:id="@+id/more_id1"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|bottom"
                            android:textSize="10sp"
                            android:padding="3dp"
                            android:text="更多 >"
                            android:background="@drawable/shape_corner_up"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="3dp">
                    <ImageView
                            android:id="@+id/topImg1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                    />
                    <ImageView
                            android:id="@+id/topImg2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"/>
                    <ImageView
                            android:id="@+id/topImg3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bg"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner">
                <LinearLayout
                        android:id="@+id/text_id2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:gravity="bottom"
                            android:text="| XXXXX" />
                    <TextView
                            android:id="@+id/more_id2"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_corner_up"
                            android:layout_weight="1"
                            android:gravity="right|bottom"
                            android:textSize="10sp"
                            android:padding="3dp"
                            android:text="更多 >" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="205dp"
                        android:orientation="vertical"
                        android:padding="3dp">
                    <LinearLayout
                            android:id="@+id/centerLinearId1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="100dp">
                        <ImageView
                                android:id="@+id/centerImg1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/xigua"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                        <ImageView
                                android:id="@+id/centerImg2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/erduo"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                        <ImageView
                                android:id="@+id/centerImg3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/dianchi"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp">
                        <ImageView
                                android:id="@+id/centerImg4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hld"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                        <ImageView
                                android:id="@+id/centerImg5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/tuzi"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                        <ImageView
                                android:id="@+id/centerImg6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/yaowan"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner">
                <LinearLayout
                        android:id="@+id/text_id3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingLeft="4dp"
                            android:gravity="bottom"
                            android:text="| XXXXX" />
                    <TextView
                            android:id="@+id/more_id3"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_corner_up"
                            android:layout_weight="1"
                            android:gravity="right|bottom"
                            android:textSize="10sp"
                            android:padding="3dp"
                            android:text="更多 >" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="205dp"
                        android:orientation="vertical"
                        android:padding="3dp">
                    <LinearLayout
                            android:id="@+id/bottomLinearId1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="100dp">
                        <ImageView
                                android:id="@+id/bottomImg1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/xigua"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                        <ImageView
                                android:id="@+id/bottomImg2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/erduo"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                        <ImageView
                                android:id="@+id/bottomImg3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/dianchi"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp">
                        <ImageView
                                android:id="@+id/bottomImg4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hld"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                        <ImageView
                                android:id="@+id/bottomImg5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/tuzi"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                        <ImageView
                                android:id="@+id/bottomImg6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/yaowan"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shape_corner">
                <ImageButton
                        android:id="@+id/imgButton_id"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="center"
                        android:src="@drawable/bottonimg"
                        android:layout_marginLeft="5dp"
                />
            </LinearLayout>


        </LinearLayout>
    </com.zhongyou.destination_library.Views.ObservableScrollView>

    <fragment android:layout_width="match_parent"
              android:layout_height="60dp"
              android:id = "@+id/bottom_fragment"
              android:name = "com.zhongyou.bottom_library.BottomFragment"
              android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>

    <include layout="@layout/layout_head"/>
</RelativeLayout>
